<%= stylesheet_link_tag("/stylesheets/ajay.css") %>


<% @pictures.each_with_index do |p, index| %>
    <%= image_tag(p.photo_url, :id => ('modal-trigger' if index == 0) ) %>
    <%= p.description %>, <%= p.likes %>, <%= p.comments %>, <%= p.social_network %>

    <%= image_tag p.user_photo_url %>
    <%= p.user_name %>
<% end %>
